<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_classic"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="加入时间"
                    android:textColor="#f6c15b" />

                <ImageView
                    android:id="@+id/iv_time"
                    android:layout_width="6dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="4dp"
                    android:gravity="center_vertical"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/moren_yellow_xia" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_scale"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_scale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="团队规模"
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/iv_scale"
                    android:layout_width="6dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="4dp"
                    android:gravity="center_vertical"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/moren_black" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_choose"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_choose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="筛选"
                    android:textColor="@color/black" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@color/line_eee" />

        <com.jcodecraeer.xrecyclerview.XRecyclerView
            android:id="@+id/xrecycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/re_no_shichang"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ImageView
            android:id="@+id/sffef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/noshichang" />

        <TextView
            android:id="@+id/lijishare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sffef"
            android:layout_centerHorizontal="true"
            android:background="@drawable/lijifenxiang"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="4dp"
            android:text="立即邀请"
            android:textColor="#8B5B30"
            android:textSize="12sp" />

    </RelativeLayout>

</RelativeLayout>