<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <View
            android:id="@+id/view_color"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@color/white" />

        <com.guodongbaohe.app.view.BotBgView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"/>

        <!--<ImageView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentBottom="true"-->
            <!--android:scaleType="centerCrop"-->
            <!--android:src="@drawable/bigquxian" />-->

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re_pager"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginTop="10dp">

        <com.youth.banner.Banner
            android:id="@+id/viewpager"
            app:delay_time="9000"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.youth.banner.Banner>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_big_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/re_pager"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layout_stats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:descendantFocusability="blocksDescendants">

            <com.guodongbaohe.app.gridview.DecoratorViewPager
                android:id="@+id/screen_viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none" />

            <LinearLayout
                android:id="@+id/screen_point"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/screen_viewpager"
                android:gravity="center"
                android:orientation="horizontal" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_theme_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_theme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_list_bg"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:scaleType="fitXY" />

                <RelativeLayout
                    android:id="@+id/ll_theme_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6dp"
                    android:paddingTop="10dp">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerview_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerview_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/recyclerview_horizontal"
                        android:scrollbars="none" />

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/re_xinshuojiaoc"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <com.youth.banner.Banner
                android:id="@+id/viewpager_xin"
                app:delay_time="8000"
                app:image_scale_type="fit_center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </com.youth.banner.Banner>

            <!--<android.support.v4.view.ViewPager-->
                <!--android:id="@+id/viewpager_xin"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent" />-->

            <!--<LinearLayout-->
                <!--android:id="@+id/llpoint_xin"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="20dp"-->
                <!--android:layout_alignParentBottom="true"-->
                <!--android:gravity="center"-->
                <!--android:orientation="horizontal" />-->

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_ma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/homelistitem"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/home_search"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/shouru"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="实时"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/kfsdj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@+id/shouru"
                    android:background="@drawable/bobao"
                    android:paddingLeft="2dp"
                    android:paddingTop="2dp"
                    android:paddingRight="2dp"
                    android:paddingBottom="2dp"
                    android:text="播报"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <com.guodongbaohe.app.view.UPMarqueeView
                    android:id="@+id/upmarqueeview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@+id/kfsdj" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/homelistitem"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="24小时热播榜"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview_hours_hot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:scrollbars="none" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="精选宝贝"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>