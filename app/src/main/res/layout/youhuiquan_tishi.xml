<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/login_out_backgroud"
    android:layout_height="match_parent">
    <TextView
        android:text="提示"
        android:id="@+id/text1"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/miaoshu"
        android:layout_below="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="50dp"
        android:textSize="18sp"
        android:text="该优惠券即将生效，生效是1111111111111111111111111111111111111111111111"/>

    <View
        android:layout_below="@+id/miaoshu"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/line_eee" />
    <TextView
        android:id="@+id/sure"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/miaoshu"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/miaoshu"
        android:padding="10dp"
        android:textSize="22sp"
        android:text="我知道了"/>

</RelativeLayout>