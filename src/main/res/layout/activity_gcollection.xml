<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.GCollectionActivity">
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/nodata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/scnodata"
            android:visibility="gone"
            />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/xrecycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:cacheColorHint="@null"
          />

    </FrameLayout>


    <LinearLayout
        android:id="@+id/rl_bottom"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white">
        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:id="@+id/re_show_fanli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <!--<CheckBox-->
                <!--android:layout_gravity="center_vertical"-->
                <!--android:id="@+id/ck_chose"-->
                <!--android:layout_width="40dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:button="@drawable/check_box_style"-->
                <!--android:scaleX="0.6"-->
                <!--android:scaleY="0.6" />-->
            <CheckBox
                android:id="@+id/ck_all"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:button="@drawable/check_box_style"
                android:checkMark="?android:attr/listChoiceIndicatorMultiple"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:scaleX="0.6"
                android:scaleY="0.6"
                android:text="全选"
                android:textSize="25dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/black" />


        </RelativeLayout>
        <View

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"></View>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_weight="1">

            <TextView
                android:id="@+id/login"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/yellow_bg_base"
                android:padding="8dp"
                android:text="删 除"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>