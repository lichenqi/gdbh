<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/bujutiaozheng"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        >
        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@mipmap/shopback"
            app:riv_corner_radius_top_left="10dp"
            app:riv_corner_radius_top_right="10dp" />
        </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="130dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="13454674879"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_marginTop="230dp"
        android:orientation="horizontal"
        android:layout_width="280dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/to_shop"
            android:layout_width="0dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_weight="4"
            android:background="@drawable/touming_bg"
            android:gravity="center"
            android:padding="8dp"
            android:text="直接购买"
            android:textSize="14dp"
            android:textColor="#FBF0EC" />
        <View
            android:layout_width="0dp"
            android:layout_marginTop="40dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/up_leave"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/jianbian_bg"
            android:gravity="center"
            android:padding="8dp"
            android:text="立即升级"
            android:textSize="14dp"
            android:textColor="#6D4629" />
    </LinearLayout>
</RelativeLayout>